<Window x:Class="Client.ClientForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="ClientForm" Height="450" Width="400" BorderThickness="0" Margin="10,0,0,0"
        ResizeMode="NoResize"
        Closing="Window_Closing">
    <Grid Margin="10">
        <TextBox x:Name="MessageWindow" TextWrapping="Wrap" Margin="0,0,0,0" Height="362" VerticalAlignment="Top"/>
        <TextBox x:Name="InputField" VerticalAlignment="Bottom" Height="24" Margin="0,0,110,0" TextWrapping="Wrap"/>
        <Button Content="Button" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,0" Width="106" Height="24" Click="SubmitButton_Click"/>

    </Grid>
</Window>
